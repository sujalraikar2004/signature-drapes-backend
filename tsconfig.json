{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node"],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "allowJs": true,
    "noEmit": true,
    "skipDefaultLibCheck": true,
    "maxNodeModuleJsDepth": 0
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "node_modules/**/*",
    "dist/**/*",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "ts-node": {
    "skipIgnore": true
  }
}